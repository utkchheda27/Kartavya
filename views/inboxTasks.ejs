<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"><!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_red.css">
    <link rel="stylesheet" href="CSS/inboxTasks.css">
</head>

<body>
    <% tasks.forEach((task, index)=> { %>
        <div class="task-individual">
            <div class="task-info">
                <div class="task">
                    <%= index + 1 %>. <%= task.description %>
                </div>

                <% if (task.details) { %>
                    <div class="task-details">
                        <%= task.details %>
                    </div>
                    <% } %>
            </div>

            <div class="hover-content">
                <i class="bi bi-pencil-square"></i>
                <i class="bi bi-calendar calendarIcon" style="cursor: pointer;"></i>
                <input type="text" class="calendarInput" style="display:none;" /><!-- Hidden input for Flatpickr -->
                <i class="bi bi-chat-left"></i>
                <i class="bi bi-three-dots"></i>
            </div>

        </div>
        <% }) %>
            <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
            <script src="/JS/calender-hover.js"></script>
            <script src="/JS/inbox.js"></script>
</body>