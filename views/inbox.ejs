<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inbox</title>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <!-- Main CSS -->
    <link rel="stylesheet" href="CSS/inbox.css">
</head>

<body>
    <div class="layout">
        <div class="sidebar">
            <%- include('partials/sidebar') %>
        </div>

        <div class="main">
            <div class="content">
                <div class="heading">
                    <h1>Inbox</h1>
                </div>

                <div class="tasks">
                    <%- include("inboxTasks", { tasks: tasks }) %>

                        <!-- Add Task Button -->
                        <div id="addTaskBtnLower" class="addTask">
                            <i class="bi bi-plus text-danger"></i>
                            <div class="add-task-text">Add Task</div>
                        </div>
                        
                        <!-- Hidden Task Form (inline, not modal) -->
                        <div id="taskFormContainer" class="add-task-form" style="display: none;">
                            <form id="taskForm" action="/tasks/add" method="POST">
                                <input type="text" class="task-title" name="description" placeholder="e.g. Submit essay on AI by Thursday p1"
                                    required />
                        
                                <textarea class="task-details" name="details" placeholder="Description (optional)"></textarea>
                        
                                <div class="task-options">
                                    <input type="date" name="completionDate" />
                                    <select name="priority">
                                        <option value="1">Priority 1</option>
                                        <option value="2">Priority 2</option>
                                        <option value="3">Priority 3</option>
                                        <option value="4" selected>Priority 4</option>
                                    </select>
                                </div>
                        
                                <div class="form-actions">
                                    <button type="button" id="closeFormBtn" class="cancel-btn">Cancel</button>
                                    <button type="submit" class="submit-btn">Add task</button>
                                </div>
                            </form>
                        </div>

                </div> <!-- tasks -->
            </div> <!-- content -->
        </div> <!-- main -->
    </div> <!-- layout -->
    <script src="/JS/inbox.js"></script>
</body>